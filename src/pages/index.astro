---
// import Card from '~/components/Card.astro';

import axios from "axios";
import Searchbar from "~/components/Searchbar.tsx";
import Layout from "~/layouts/Layout.astro";

import img1 from "~/assets/img1.jpg";
import img2 from "~/assets/img2.jpg";
import img3 from "~/assets/img3.jpeg";
import { Image } from "astro:assets";
import SwiperCarousel from "~/components/Carousel";
import SwipeCopy from "~/components/SwipeCopy";
import DocsSwipe from "~/components/DocsSwipe.astro";

type Todo = {
  userId: number;
  id: number;
  title: string;
  completed: false;
};

const { data: todos } = await axios<Todo[]>(
  "https://jsonplaceholder.typicode.com/todos"
);
---

<Layout title="Ohayou sekai!">
  <main>
    <h1>Welcome to <span class="text-gradient">These nutz</span></h1>
    <Searchbar client:load />

    <DocsSwipe />

    <section>
      <h2>All todos</h2>
      {
        todos.slice(3).map((to) => (
          <div>
            <p>{to.title}</p>
            <p>{to.completed}</p>
          </div>
        ))
      }
    </section>
  </main>
</Layout>
